                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Done'
                }).then((result) => {
                    if (result.value) {
                        swal(
                            'Successful'
                        )
                    }
                })

            }
    </script>
}