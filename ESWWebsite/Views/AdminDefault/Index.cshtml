
@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <h3 class="page-title">Typography</h3>
            <div class="panel panel-headline">
                <div class="panel-body">

                    <h2>Job Detail</h2>

                    <h3>Faculty Staff</h3>
                    <hr>
                    <h4>Job Status </h4>
                    <div><select>    <option value="open">Open</option>    <option value="closed">Close</option> </select></div>

                    <p>Sales Regional Head</p>
                    <hr>
                    <h4>Position Based In:</h4>
                    <div class='form-group '>
                        <select class='form-control' id='id_country'>
                            <option value="" title="Tooltip"> Select Country</option>
                            <option>Pakistan</option>
                            <option>United States</option>
                            <option>United Arab Emirates</option>
                            <option>China</option>
                            <option>India</option>
                            <option>United Kingdom</option>
                        </select>
                    </div>

                    <div class='form-group'>
                        <select class='form-control' id='id_city'>
                            <option value="" title="Tooltip">Select City</option>
                            <option>Karachi</option>
                            <option>Lahore</option>
                            <option>Multan</option>
                            <option>Faisalabad</option>
                            <option>Islamabad</option>
                        </select>
                    </div>
                    <hr>


                    <h4>Employer / Client�s Detail:</h4>
                    <input type="text" placeholder="Enter your details..." />
                    <hr>


                    <h4>Gender:</h4>
                    <div>
                        <select class='form-control' id='id_gender'>
                            <option value="" title="Tooltip">Select Gender</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Both</option>
                        </select>
                    </div>
                    <hr>


                    <h4>Education:</h4>
                    <select class='form-control' id='id_degreeType'>
                        <option value="" title="Tooltip">Select Your Degree Type</option>
                        <option>MBA</option>
                        <option>BBA</option>
                        <option>BSCS</option>
                        <option>MSc</option>
                        <option>PhD</option>
                    </select>

                    <hr><h4>Experience:</h4>
                    <div>
                        <input type="number" placeholder="5" />
                        years
                    </div>
                    <hr>


                    <h4>Job Descriptions / Responsibilities:</h4>
                    <input type="text" placeholder="Description" />
                    <hr>

                    <h4>Apply: Send your updated resume at jobs@eswpak.com in MS WORD FORMAT.</h4>


                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->
</div>
