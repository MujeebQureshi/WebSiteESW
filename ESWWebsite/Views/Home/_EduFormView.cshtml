    <div class="form-group">
        <input id="INSTITUTIONNAME" name="INSTITUTIONNAME" type="text" placeholder="Institute" class="form-control" value="@Model.INSTITUTIONNAME" required/>
    </div>
    <div class="form-group">
        <input id="PASSINGYEAR" name="PASSINGYEAR" type="month" placeholder="Passing Month and Year" class="form-control" value="@dtPassing" required />
    </div>
    <div class="form-group">
        <input id="GRADES" name="GRADES" type="text" placeholder="Result / Grade" class="form-control" value="@Model.GRADES" required/>
    </div>
    <input type="hidden" id="QUALIFICATIONID" name="QUALIFICATIONID" value="@Model.QUALIFICATIONID" />
