@model WebsiteBackEnd.Models.jpqualification
@{ 
    List<Shared.DDList> lstDegreeType = Shared.Constants.getNewDegreeType();
    if (!string.IsNullOrEmpty(Model.DegreeType))
    {
        lstDegreeType.Find(g => g.Value.Equals(Model.DegreeType)).isSelected = true;
    }

    string dtPassing = (Model.PASSINGYEAR != null) ? Model.PASSINGYEAR.Value.ToString(Shared.Constants.DATE_RFC_YEAR_MONTH_FORMAT) : "";

}
<form id="EduRec" action="#">
    @*<input type="submit" style="display:none" />*@
    <div class="form-group">
        <input id="DEGREENAME" name="DEGREENAME" type="text" placeholder="Degree Title" class="form-control" value="@Model.DEGREENAME" required/>
    </div>
    <div class='form-group'>
        <select class='form-control' id='DegreeType' name="DegreeType" required>
            @foreach (var opt in lstDegreeType)
            {
                string selected = "";
                if (opt.isSelected)
                {
                    selected = "selected";
                }
                <option value="@opt.Value" @selected>@opt.Text</option>
            }
        </select>
    </div>

    @*<div class="form-group"><input type="text" placeholder="Major Subject" class="form-control" /></div>

    <div class='form-group '>
        <select class='form-control' id='id_country'>
